page {
  background-color: #edece8;
}
.user_info_warp {
  background: #000;
  height: 45vh;
  overflow: hidden;
  position: relative;
}
.user_info_warp .bg_warp {
  opacity: 0.7;
  filter: alpha(opacity=70);
  filter: blur(10rpx);
  height: 50vh;
}
.user_info_warp .bg_warp .bg {
  width: 100%;
  height: 100%;
}
.user_info_warp .info_warp {
  display: flex;
  justify-content: space-around;
  width: 50%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.user_info_warp .info_warp .shop_info .shop_logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_warp .info_warp .shop_info .shop_name {
  color: #fff;
  margin-top: 20rpx;
}
.user_info_warp .info_warp .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user_info_warp .info_warp .user_info .user_name {
  color: white;
  margin-top: 30rpx;
}
.user_info_warp .info_warp .user_info .user_role_warp {
  display: flex;
  justify-content: center;
}
.user_info_warp .info_warp .user_info .user_role_warp .user_role {
  padding: 0 15rpx;
  background-color: var(--themeColor);
  color: white;
  border-radius: 15rpx;
}
.cells_class {
  margin-top: 0;
}
.cells_class .shop_status_text {
  font-weight: bold;
}
.cells_class .active {
  color: #39d639;
}
.cells_class .inactive {
  color: red;
}
.cells_class .btn_warp {
  padding: 0;
}
.cells_class .btn_warp button::after {
  border: none;
}
.cells_class .btn_warp button {
  border-radius: 0;
  line-height: 1;
  background-color: transparent;
  text-align: start;
  font-size: 17px;
  padding: 20px 16px;
}
.cells_class .btn_warp .button-hover {
  background-color: transparent;
}
.arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
}
