.cart_content {
  border-radius: 30rpx;
  background-color: white;
  margin: 25rpx;
  border: 1rpx solid #f0eef4;
  padding: 0 20rpx;
}
.cart_content .shop_title_warp {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #e9e8ea;
  justify-content: space-between;
}
.cart_content .shop_title_warp .shop_title {
  display: flex;
  align-items: center;
}
.cart_content .shop_title_warp .shop_title .shop_title_text {
  font-weight: bold;
  font-size: 33rpx;
}
.cart_content .shop_title_warp .shop_title .iconfont.icon-right_arrow {
  font-size: 30rpx;
}
.cart_content .shop_title_warp .iconfont.icon-trash_can {
  color: var(--themeColor);
}
.cart_content .goods_warp .goods_item_warp {
  display: flex;
  align-items: center;
  margin: 15rpx 0;
}
.cart_content .goods_warp .goods_item_warp .goods_pic {
  width: 30%;
  flex: none;
}
.cart_content .goods_warp .goods_item_warp .goods_info {
  display: flex;
  flex-direction: column;
}
.cart_content .goods_warp .goods_item_warp .goods_info .goods_name_price {
  display: flex;
}
.cart_content .goods_warp .goods_item_warp .goods_info .goods_name_price .goods_name {
  flex: 0 0 325rpx;
}
.cart_content .goods_warp .goods_item_warp .goods_info .goods_name_price .goods_price {
  font-weight: bold;
}
.cart_content .goods_warp .goods_item_warp .goods_info .goods_num {
  padding: 10rpx 0;
  font-weight: bold;
}
.cart_content .total_pay_warp {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.cart_content .total_pay_warp .pay_info {
  display: flex;
  flex-direction: column;
}
.cart_content .total_pay_warp .pay_info .total_price {
  font-size: 35rpx;
  padding: 5rpx;
}
.cart_content .total_pay_warp .pay_info .total_price .total_price_text {
  font-weight: bold;
  color: var(--themeColor);
}
.cart_content .total_pay_warp .pay_info .fee {
  font-size: 30rpx;
}
.cart_content .total_pay_warp .pay_btn {
  padding: 0 40rpx;
  border-radius: 20rpx;
  font-size: 38rpx;
  color: white;
  background-color: var(--themeColor);
}
