<!-- 搜索框↓ -->
<view class="search_row">
    <input value="{{inpValue}}" placeholder="请输入您的地址" bindinput="handleInput" ></input>
    <button bindtap="handleCancel" hidden="{{!isFocus}}">取消</button>
</view>
<!-- 搜索框↑ -->
<!-- 搜索的内容设定模块↓ -->
<view class="search_content">
    <view class="search_item" wx:for="{{goods.data.message}}" wx:key="goods_id">
        {{item.goods_name}}
    </view>
</view>

  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location></map>
 </view>

