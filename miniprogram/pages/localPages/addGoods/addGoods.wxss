Page {
  padding-bottom: 120rpx;
}
.goods_img .add_pic_btm {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 50rpx;
  text-align: center;
  color: #666;
  border: 3rpx dashed currentColor;
}
.goods_img .up_img_warp {
  margin: 0 15rpx;
}
.goods_img .up_img_warp image {
  vertical-align: middle;
  width: 150rpx;
  height: 150rpx;
}
.goods_img .up_img_warp .delete_pic_btm_warp {
  width: 150rpx;
  padding-top: 0;
  display: flex;
  height: 60rpx;
  justify-content: center;
  align-items: center;
}
.goods_img .up_img_warp .delete_pic_btm_warp .delete_pic_btm {
  width: 60%;
  color: white;
  background-color: red;
  border-radius: 15rpx;
  padding: 5rpx;
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.myui-select {
  display: flex;
  align-items: center;
  -webkit-appearance: none;
  border: 0;
  outline: 0;
  background-color: transparent;
  width: 100%;
  font-size: inherit;
  height: 56px;
  line-height: 56px;
  position: relative;
  z-index: 1;
  color: var(--weui-FG-0);
}
.arrow_warp {
  margin-left: 5px;
  padding-bottom: 5px;
}
.arrow_warp .arrow {
  transform: rotate(90deg);
}
.save_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50rpx auto;
  width: 70%;
  height: 80rpx;
  background-color: var(--themeColor);
  color: white;
  border-radius: 98rpx;
  border-color: var(--themeColor);
  font-size: 39rpx;
  font-weight: bold;
  box-shadow: 10rpx 10rpx 10rpx 5rpx rgba(0, 0, 0, 0.164);
}
.rule_name {
  display: inline;
  color: var(--weui-LINK);
}
.rule {
  padding: 25rpx;
}
.rule .content {
  font-size: 30rpx;
  text-align: left;
  margin-bottom: 15rpx;
}
