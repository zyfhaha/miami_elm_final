.index_swiper swiper {
  position: relative;
  width: 750rpx;
  height: 570rpx;
}
.index_swiper swiper image {
  width: 100%;
}
.index_swiper swiper .detail {
  display: flex;
  align-items: center;
  width: 100%;
  height: 15%;
  position: absolute;
  text-indent: 15rpx;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
}
.shop_cate {
  display: flex;
  height: 20vh;
  margin: 10rpx 20rpx;
  justify-content: space-around;
}
.shop_cate .grocery_delivery {
  margin-right: 35rpx;
  border-radius: 20rpx;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to bottom right, #1dcd69, #32acad);
  box-shadow: 0 0 10rpx 10rpx rgba(0, 0, 0, 0.164);
  color: white;
}
.shop_cate .grocery_delivery .iconfont.icon-grocery {
  font-size: 180rpx;
  margin-right: 20rpx;
}
.shop_cate .grocery_delivery .grocery_delivery_text {
  font-size: 60rpx;
}
.shop_cate .restruand_delivery {
  border-radius: 20rpx;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to bottom right, #1dcd69, #32acad);
  box-shadow: 0 0 10rpx 10rpx rgba(0, 0, 0, 0.164);
  color: white;
}
.shop_cate .restruand_delivery .iconfont.icon-delivery {
  font-size: 180rpx;
  margin-right: 20rpx;
}
.shop_cate .restruand_delivery .restruand_delivery_text {
  font-size: 60rpx;
}
.recommend_shop_warp {
  padding: 20rpx;
}
.recommend_shop_warp .shop_title {
  display: flex;
  align-items: center;
  font-size: 35rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #c1c1c1;
  margin-bottom: 20rpx;
}
.recommend_shop_warp .shop_title .iconfont.icon-shop {
  margin-right: 20rpx;
}
