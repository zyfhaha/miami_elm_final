.cates {
  background-color: white;
  height: 100%;
}
.cates .cates_container {
  height: 100vh;
  display: flex;
}
.cates .cates_container .left_menu {
  /* 子项 高度 100% flex */
  flex: 2;
  background-color: #f7f6f7;
  box-shadow: 5rpx 0rpx 8rpx 1rpx rgba(0, 0, 0, 0.164);
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  white-space: nowrap;
}
.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_content {
  /* 子项 高度 100% flex */
  flex: 5;
}
.cates .cates_container .right_content .goods_list .margin {
  width: 100%;
  height: 200rpx;
}
.cates .cates_container .right_content .goods_list .goods_item {
  padding: 0 30rpx;
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp {
  position: relative;
  padding: 15rpx 0;
  display: flex;
  border-bottom: 3rpx solid #f6f6f6;
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_pic_warp .goods_pic {
  width: 150rpx;
  height: 150rpx;
  flex: none;
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_basic_info_warp {
  width: 65%;
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_basic_info_warp .goods_name {
  font-size: 25rpx;
  font-weight: bold;
  width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_basic_info_warp .goods_stock {
  font-size: 20rpx;
  color: #666;
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_basic_info_warp .goods_buy_limit {
  font-size: 20rpx;
  color: #666;
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_basic_info_warp .bottom_warp {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_basic_info_warp .bottom_warp .goods_price {
  flex: 1.2;
  font-size: 30rpx;
  color: var(--themeColor);
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_basic_info_warp .bottom_warp .operation_warp {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_basic_info_warp .bottom_warp .operation_warp .reduce_btn {
  width: 45rpx;
  height: 45rpx;
  font-size: 40rpx;
  color: white;
  text-align: center;
  line-height: 45rpx;
  background-color: var(--themeColor);
  border-radius: 100%;
  box-shadow: 5rpx 5rpx 8rpx 1rpx rgba(0, 0, 0, 0.164);
}
.cates .cates_container .right_content .goods_list .goods_item .goods_info_warp .goods_basic_info_warp .bottom_warp .operation_warp .goodsNum {
  margin-left: auto;
}
.cates .add_btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 120rpx;
  color: white;
  font-size: 90rpx;
  font-weight: bold;
  background-color: var(--themeColor);
  box-shadow: 10rpx 10rpx 13rpx 6rpx rgba(0, 0, 0, 0.164);
  position: fixed;
  right: 7%;
  bottom: 8%;
}
.cates .add_btn .add_sign {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
